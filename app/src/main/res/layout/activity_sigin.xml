<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".SiginActivity">

    <ScrollView
        android:id="@+id/vista_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:fontFamily="@font/cabin"
                android:text="@string/str_txt_datos_ingreso"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#75BFC8"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:text="@string/str_txt_email"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cmpSiginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/str_sigin_email"
                android:inputType="textEmailAddress"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:text="@string/contraseÃ±a"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cmpSiginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/str_sigin_password"
                android:inputType="textPersonName|textPassword"
                tools:ignore="Autofill" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="58dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:text="@string/str_txt_datos_personales"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#69B8C0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:text="@string/str_txt_nombre"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cmpSiginNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/str_sigin_nombre"
                android:inputType="textPersonName"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:text="@string/str_txt_direccion"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cmpSiginDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/str_sigin_direccion"
                android:inputType="textPersonName"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alef"
                android:text="@string/str_txt_nacimiento"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cmpSiginFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/str_sigin_nacimiento"
                android:inputType="date"
                tools:ignore="Autofill" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_sigin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_signin" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="@string/register"
        android:textColor="#BA00BCD4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/vista_scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>